#: import ex5 ex5


<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        text: "Obj-1"
        size: 150, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1,0,1,0
        on_press: self.text = ex5.text_toggle(self.text)

    DPEAButton:
        text: "0"
        size: 150,100
        x: root.width * 0.5
        y: root.height * 0.5
        color: 1,0,1,0
        on_press: self.text = ex5.counter_text(self.text)

    DPEAButton:
        text: "Motor On"
        size: 200,100
        x: root.width * 0.75
        y: root.height * 0.50
        color: 1,0,1,0
        on_press: self.text = ex5.motor_toggle(self.text)

    Slider:
        id: slider1

        x: root.width * 0.1
        y: root.height * 0.25
        size_hint_x: 0.7

        min: 0
        max: 100
        step: 1
        orientation: 'horizontal'

    DPEAButton:
        text: str(slider1.value)
        size: 100,100
        x: root.width * 0.1
        y: root.height * 0.9
        color: 1,0,1,0

    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"

        size: 100,100
        x: root.width * 0.75
        y: root.height * 0.2
        on_press: root.manager.current = 'two'


<SecondScreen>:
    name: 'two'
    id: 'two'
    FloatLayout:
        size_hint: None, None

    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"

        size: 100,100
        x: root.width * 0.75
        y: root.height * 0.2
        on_press: root.manager.current = 'main'


